@model TrafficTicketMan.Models.PoliceStation

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>PoliceStation</legend>

        @Html.HiddenFor(model => model.PoliceStationId)

        <div class="editor-label">
            @Html.LabelFor(model => model.StationName)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.StationName)
            @Html.ValidationMessageFor(model => model.StationName)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.DistrictId, "District")
        </div>
        <div class="editor-field">
            @Html.DropDownList("DistrictId", String.Empty)
            @Html.ValidationMessageFor(model => model.DistrictId)
        </div>

        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
